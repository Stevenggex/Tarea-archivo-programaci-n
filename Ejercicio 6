#include <iostream>
#include <fstream>
#include <iomanip>
#include <string>
#include <vector>
#include <sstream>
#include <ctime>

struct Cliente {
	int codigo;
	std::string nombre;
	std::string tipoServicio;
	int añoAfiliacion;
	std::string estado;
	int codigoPlan;
};

struct Plan {
	int codigo;
	std::string nombre;
	int velocidadMinutos;
	double precioMensual;
};

const int MAX_CLIENTES = 20;
const int MAX_PLANES = 10;

void crearCliente(Cliente clientes[], int& numClientes) {
	if (numClientes >= MAX_CLIENTES) {
		std::cout << "Máximo de clientes alcanzado\n";
		return;
	}
	
	Cliente c;
	std::cout << "Código: "; std::cin >> c.codigo;
	std::cout << "Nombre: "; std::cin.ignore(); std::getline(std::cin, c.nombre);
	std::cout << "Tipo (Internet/Telefonía/Combo): "; std::cin >> c.tipoServicio;
	std::cout << "Año afiliación: "; std::cin >> c.añoAfiliacion;
	std::cout << "Estado (Activo/Suspendido): "; std::cin >> c.estado;
	std::cout << "Código plan: "; std::cin >> c.codigoPlan;
	
	clientes[numClientes] = c;
	numClientes++;
	
	std::ofstream archivo("clientes.dat", std::ios::binary | std::ios::app);
	archivo.write(reinterpret_cast<char*>(&c), sizeof(Cliente));
	archivo.close();
	
	std::cout << "Cliente creado\n";
}

void leerClientes(Cliente clientes[], int& numClientes) {
	std::ifstream archivo("clientes.dat", std::ios::binary);
	numClientes = 0;
	
	while (archivo.read(reinterpret_cast<char*>(&clientes[numClientes]), sizeof(Cliente)) && numClientes < MAX_CLIENTES) {
		numClientes++;
	}
	archivo.close();
}

void mostrarClientes(const Cliente clientes[], int numClientes) {
	std::cout << "\n=== LISTADO DE CLIENTES ===\n";
	for (int i = 0; i < numClientes; i++) {
		std::cout << "Cód: " << clientes[i].codigo << " | " 
		<< clientes[i].nombre << " | " 
		<< clientes[i].tipoServicio << " | " 
		<< clientes[i].estado << " | Plan: " << clientes[i].codigoPlan << std::endl;
	}
}

void actualizarEstadoCliente(Cliente clientes[], int numClientes) {
	int codigo;
	std::cout << "Código cliente: "; std::cin >> codigo;
	
	for (int i = 0; i < numClientes; i++) {
		if (clientes[i].codigo == codigo) {
			std::cout << "Nuevo estado (Activo/Suspendido): "; 
			std::cin >> clientes[i].estado;
			
			std::ofstream archivo("clientes.dat", std::ios::binary);
			for (int j = 0; j < numClientes; j++) {
				archivo.write(reinterpret_cast<char*>(&clientes[j]), sizeof(Cliente));
			}
			archivo.close();
			std::cout << "Estado actualizado\n";
			return;
		}
	}
	std::cout << "Cliente no encontrado\n";
}

void eliminarCliente(Cliente clientes[], int& numClientes, int codigo) {
	for (int i = 0; i < numClientes; i++) {
		if (clientes[i].codigo == codigo) {
			for (int j = i; j < numClientes - 1; j++) {
				clientes[j] = clientes[j + 1];
			}
			numClientes--;
			
			std::ofstream archivo("clientes.dat", std::ios::binary);
			for (int k = 0; k < numClientes; k++) {
				archivo.write(reinterpret_cast<char*>(&clientes[k]), sizeof(Cliente));
			}
			archivo.close();
			std::cout << "Cliente eliminado\n";
			return;
		}
	}
	std::cout << "Cliente no encontrado\n";
}

void buscarPorCodigo(const Cliente clientes[], int numClientes, int codigo) {
	for (int i = 0; i < numClientes; i++) {
		if (clientes[i].codigo == codigo) {
			std::cout << "Cliente: " << clientes[i].nombre 
			<< " - Estado: " << clientes[i].estado 
			<< " - Servicio: " << clientes[i].tipoServicio << std::endl;
			return;
		}
	}
	std::cout << "No encontrado\n";
}

void leerPlanes(Plan planes[], int& numPlanes) {
	std::ifstream archivo("planes.txt");
	numPlanes = 0;
	
	if (!archivo) {
		std::cout << "Archivo planes.txt no encontrado, creando datos de ejemplo...\n";
		std::ofstream crear("planes.txt");
		crear << "1 Internet_Básico 50 25.99\n";
		crear << "2 Internet_Premium 100 45.99\n";
		crear << "3 Telefonía 1000 15.99\n";
		crear << "4 Combo 100 35.99\n";
		crear.close();
		archivo.open("planes.txt");
	}
	
	std::string linea;
	while (std::getline(archivo, linea) && numPlanes < MAX_PLANES) {
		std::istringstream iss(linea);
		iss >> planes[numPlanes].codigo >> planes[numPlanes].nombre 
		>> planes[numPlanes].velocidadMinutos >> planes[numPlanes].precioMensual;
		numPlanes++;
	}
	archivo.close();
}

void mostrarPlanes(const Plan planes[], int numPlanes) {
	std::cout << "\n=== PLANES DISPONIBLES ===\n";
	for (int i = 0; i < numPlanes; i++) {
		std::cout << "Cód: " << planes[i].codigo << " | " 
		<< planes[i].nombre << " | " 
		<< planes[i].velocidadMinutos << "Mbps/Min | $" 
		<< std::fixed << std::setprecision(2) << planes[i].precioMensual << std::endl;
	}
}

double calcularTotalFacturado(const Cliente clientes[], int numClientes, const Plan planes[], int numPlanes) {
	double total = 0;
	for (int i = 0; i < numClientes; i++) {
		if (clientes[i].estado == "Activo") {
			for (int j = 0; j < numPlanes; j++) {
				if (clientes[i].codigoPlan == planes[j].codigo) {
					total += planes[j].precioMensual;
					break;
				}
			}
		}
	}
	return total;
}

void generarFacturacion(const Cliente clientes[], int numClientes, const Plan planes[], int numPlanes) {
	std::ofstream archivo("facturacion.csv");
	archivo << "Código,Nombre,Precio,Total\n";
	
	for (int i = 0; i < numClientes; i++) {
		if (clientes[i].estado == "Activo") {
			for (int j = 0; j < numPlanes; j++) {
				if (clientes[i].codigoPlan == planes[j].codigo) {
					archivo << clientes[i].codigo << "," << clientes[i].nombre << ","
					<< planes[j].precioMensual << "," << planes[j].precioMensual << "\n";
					break;
				}
			}
		}
	}
	archivo.close();
	std::cout << "Facturación generada en facturacion.csv\n";
}

int main() {
	Cliente clientes[MAX_CLIENTES];
	Plan planes[MAX_PLANES];
	int numClientes = 0, numPlanes = 0;
	
	std::cout << "=== SISTEMA GESTIÓN EMPRESA TELEFONÍA ===\n";
	
	leerClientes(clientes, numClientes);
	leerPlanes(planes, numPlanes);
	
	int opcion;
	do {
		std::cout << "\n=== MENÚ PRINCIPAL ===\n";
		std::cout << "1. Crear cliente\n";
		std::cout << "2. Mostrar clientes\n";
		std::cout << "3. Mostrar planes\n";
		std::cout << "4. Actualizar estado cliente\n";
		std::cout << "5. Eliminar cliente\n";
		std::cout << "6. Buscar cliente por código\n";
		std::cout << "7. Generar facturación\n";
		std::cout << "8. Total facturado\n";
		std::cout << "0. Salir\n";
		std::cout << "Opción: ";
		std::cin >> opcion;
		
		switch(opcion) {
			case 1: crearCliente(clientes, numClientes); break;
			case 2: mostrarClientes(clientes, numClientes); break;
			case 3: mostrarPlanes(planes, numPlanes); break;
			case 4: actualizarEstadoCliente(clientes, numClientes); break;
			case 5: {
				int cod; std::cout << "Código a eliminar: "; std::cin >> cod;
				eliminarCliente(clientes, numClientes, cod);
				break;
			}
			case 6: {
				int cod; std::cout << "Código a buscar: "; std::cin >> cod;
				buscarPorCodigo(clientes, numClientes, cod);
				break;
			}
			case 7: generarFacturacion(clientes, numClientes, planes, numPlanes); break;
			case 8: {
				double total = calcularTotalFacturado(clientes, numClientes, planes, numPlanes);
				std::cout << "Total facturado mensual: $" 
				<< std::fixed << std::setprecision(2) << total << std::endl;
				break;
			}
			case 0: std::cout << "¡Gracias por usar el sistema!\n"; break;
			default: std::cout << "Opción inválida\n";
		}
	} while (opcion != 0);
	
	return 0;
}
