#include <iostream>
#include <fstream>
#include <cstring>
using namespace std;

int main() {
	char materia[100];
	char opcion;
	
	ofstream archivo("materias.txt", ios::app);
	if (!archivo.is_open()) {
		cout << "Error al abrir archivo\n";
		return 1;
	}
	
	do {
		cout << "Ingrese nombre de la materia: ";
		cin.ignore();
		cin.getline(materia, 100);
		
		archivo << materia << "\n";
		
		cout << "Â¿Desea ingresar otra materia? (s/n): ";
		cin >> opcion;
	} while (opcion == 's' || opcion == 'S');
	
	archivo.close();
	cout << "Materias guardadas en materias.txt\n";
	
	return 0;
}
